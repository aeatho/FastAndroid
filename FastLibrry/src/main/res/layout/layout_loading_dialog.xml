<RelativeLayout
    android:background="@drawable/bg_loading_dialog"
    android:paddingLeft="19.0dip"
    android:layout_width="210.0dip"
    android:layout_height="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/id_cross_dissmis"
        android:background="@null"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/icon_cross_dissmis"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <View
        android:background="#aae0e0e0"
        android:layout_width="0.5dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/id_cross_dissmis"/>

    <ProgressBar
        android:layout_gravity="center_vertical"
        android:id="@+id/id_progress_bar"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleSmall"/>

    <TextView
        android:textSize="14.0sp"
        android:textColor="#ffffffff"
        android:id="@+id/id_hint_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:text="@string/loading"
        android:layout_toRightOf="@id/id_progress_bar"
        android:layout_centerVertical="true"/>
</RelativeLayout>